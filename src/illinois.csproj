<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <PackAsTool>true</PackAsTool>
    <ToolCommandName>illinois</ToolCommandName>

    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageId>illinois</PackageId>
    <Version>0.1.0</Version>
    <Authors>Engin Polat</Authors>
    <PackageDescription>This is a tool to auto-generate documentation for a given bicep file</PackageDescription>
    <RepositoryUrl>https://github.com/polatengin/illinois</RepositoryUrl>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="../README.md" Pack="true" PackagePath="/" />
    <None Include="../LICENSE" Pack="true" PackagePath="" />

    <PackageReference Include="System.CommandLine" Version="2.0.0-beta4.22272.1" />
  </ItemGroup>

</Project>
